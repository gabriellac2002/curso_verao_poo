package ufjf.dcc.poo.exemplos;

import java.util.*;

public class Notas {

	public static void main(String[] args) {
		Scanner teclado = new Scanner(System.in);
		String nome1,nome2,nome3;
		float media1,media2,media3;
		float notas1[] = new float[3];
		float notas2[] = new float[3];
		float notas3[] = new float[3];
		
		System.out.println("Nome aluno 1: ");
		nome1 = teclado.nextLine();
		System.out.println("Nome aluno 2: ");
		nome2 = teclado.nextLine();
		System.out.println("Nome aluno 3: ");
		nome3 = teclado.nextLine();
		
		float soma1 = 0;
		float soma2 = 0;
		float soma3 = 0;
		
		for(int i=0; i<3; i++)
		{
			System.out.println("Informe a nota do aluno " + nome1);
			notas1[i] = teclado.nextFloat();
			soma1 += notas1[i];
		}
		
		media1 = soma1/3;
		
		for(int i=0; i<3; i++)
		{
			System.out.println("Informe a nota do aluno " + nome2);
			notas2[i] = teclado.nextFloat();
			soma2 += notas2[i];
		}
		
		media2 = soma2/3;
		
		for(int i=0; i<3; i++)
		{
			System.out.println("Informe a nota do aluno " + nome3);
			notas3[i] = teclado.nextFloat();
			soma3 += notas3[i];
		}
		
		media3 = soma3/3;
		
	
	}

}
